{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -Eq '\\.(ts|tsx)$'; then pnpm biome format \"$file_path\"; fi; }"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\\\".go\\\"))' | xargs -r -I {} sh -c 'gofmt -w \\\"$1\\\" && goimports -w \\\"$1\\\"' _ {}"
          }
        ]
      }
    ]
  }
}
